## Default
STYLE="keyboards"

rofi \
	-show drun \
	-modi run,drun,ssh \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal alacritty \
	-kb-cancel Super-d \
	-theme "$HOME"/.config/rofi/"$STYLE"/launcher.rasi
